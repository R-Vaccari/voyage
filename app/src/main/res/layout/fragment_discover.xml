<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.gallery.GalleryFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discover_scroll_experience"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_toggle_experience"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    style="@style/Style.Voyage.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discover_bt_experience_min"
                    android:text="@string/experience_mediterranean"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/Style.Voyage.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discover_bt_experience_mid"
                    android:text="@string/experience_black_sea"
                    android:insetRight="8dp"
                    android:insetLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/discover_bt_population_min"
                    app:layout_constraintEnd_toStartOf="@id/discover_bt_population_max"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/discover_bt_experience_max"
                    style="@style/Style.Voyage.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/experience_north"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            app:layout_constraintTop_toBottomOf="@id/discover_scroll_experience"
            app:layout_constraintBottom_toTopOf="@id/discover_toggle_pop"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discover_toggle_pop"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discover_scroll_experience"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_population_min"
                android:text="@string/pop_min"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_population_mid"
                android:text="@string/pop_mid"
                android:insetRight="8dp"
                android:insetLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/discover_bt_population_min"
                app:layout_constraintEnd_toStartOf="@id/discover_bt_population_max"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_population_max"
                android:text="@string/pop_max"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            app:layout_constraintTop_toBottomOf="@id/discover_toggle_pop"
            app:layout_constraintBottom_toTopOf="@id/discover_toggle_elevation"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discover_toggle_elevation"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discover_toggle_pop"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_elevation_min"
                android:text="@string/elevation_min"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_elevation_mid"
                android:text="@string/elevation_mid"
                android:insetRight="8dp"
                android:insetLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/discover_bt_population_min"
                app:layout_constraintEnd_toStartOf="@id/discover_bt_population_max"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Style.Voyage.Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discover_bt_elevation_max"
                android:text="@string/elevation_max"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/text_gallery"
            style="@style/Style.Voyage.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Import"
            app:layout_constraintBottom_toBottomOf="@+id/advance_bt"
            app:layout_constraintEnd_toStartOf="@+id/advance_bt"
            app:layout_constraintTop_toTopOf="@+id/advance_bt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advance_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:drawableEnd="@drawable/ic_baseline_flight_24"
            android:drawableTint="@android:color/white"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/discover_toggle_elevation"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>