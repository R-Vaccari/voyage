<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Voyage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/crimson_text</item>
        <item name="appBarLayoutStyle">@style/Style.Voyage.Appbar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Voyage.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Voyage.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Voyage.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Style.Voyage.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Style.Voyage.Button.Light" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Style.Voyage.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/states_button_outlined</item>
        <item name="android:textColor">@color/states_button_text_outlined</item>
        <item name="strokeColor">@color/states_button_outlined</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Style.Voyage.Button.Outlined.NoBold" parent="Style.Voyage.Button.Outlined">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Style.Voyage.InfoBox.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoTab">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Style.Voyage.ForwardButton.Circle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_shape</item>
        <item name="android:src">@drawable/ic_round_arrow_forward_24</item>
        <item name="tint">@color/primary</item>
        <item name="android:elevation">1dp</item>
    </style>
</resources>